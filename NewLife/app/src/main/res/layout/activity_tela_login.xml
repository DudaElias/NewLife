<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLogin"
    android:background="@drawable/fundo_login">

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="125dp"
        android:text="Login"
        android:textColor="#404040"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>
    <TextView
        android:id="@+id/txtCriar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="125dp"
        android:text="Criar Conta"
        android:textColor="#404040"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="125dp"
        android:text="Bluetooth"
        android:textColor="#404040"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent" />
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="220dp"
                android:ems="9"
                android:id="@+id/txtLNome"
                android:hint="Nome do Usuário"
                android:inputType="textPersonName"
                android:textSize="25dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLSenha"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:ems="9"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnLogar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/botao"
                android:ems="7"
                android:text="LOGIN"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-40dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="220dp"
                android:ems="9"
                android:hint="Nome usuário"
                android:id="@+id/txtNomeC"

                android:inputType="textPersonName"
                android:textSize="25dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtSenhaC"

                android:ems="9"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textSize="25dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:ems="9"
                android:id="@+id/txtSenhaCN"
                android:hint="Repetir Senha"
                android:inputType="textPassword"
                android:textSize="25dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:ems="9"
                android:id="@+id/txtEmailC"

                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/botao"
                android:ems="7"
                android:text="CRIAR"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/btnCadastrar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-80dp">


            <Button
                android:id="@+id/conectar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#FFFFFF"
                android:background="@drawable/botao"
                android:layout_marginTop="350dp"
                android:text="CONECTAR"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"

                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />

            <Button
                android:id="@+id/batimentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="350dp"
                android:layout_marginStart="20dp"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:background="@drawable/botao"
                android:text="BATIMENTOS"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />
        </LinearLayout>
    </ViewFlipper>




</androidx.constraintlayout.widget.ConstraintLayout>